{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"deleteOutDir": true
	},
	"projects": {
		"api": {
			"type": "application",
			"entryFile": "main",
			"sourceRoot": "src",
			"compilerOptions": {
				"tsConfigPath": "tsconfig.json"
			}
		},
		"worker": {
			"type": "application",
			"entryFile": "worker",
			"sourceRoot": "src",
			"compilerOptions": {
				"tsConfigPath": "tsconfig.json"
			}
		}
	}
}
